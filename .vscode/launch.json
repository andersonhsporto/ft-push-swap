	"version": "0.2.0",
	"configurations": [
		{
			"name": "gcc - Criar e depurar o arquivo ativo",
			"type": "cppdbg",
			"request": "launch",
			"program": "/home/anderson/ft-push-swap/push_swap",
			"args": ["0", "5000", "1", "4", "2000", "10", "11", "3", "2", "7", "100", "200", "300", "400"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Habilitar a reformatação automática para gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: gcc arquivo de build ativo",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
